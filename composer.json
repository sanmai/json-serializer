{
    "name": "sanmai/json-serializer",
    "type": "library",
    "description": "Flexible JSON Serializer",
    "license": "MIT",
    "authors": [
        {
            "name": "Alexey Kopytko",
            "email": "alexey@kopytko.com",
            "homepage": "https://www.alexeykopytko.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=7.3",
        "ext-json": "*",
        "doctrine/annotations": "^1.10.4",
        "jms/serializer": "^3.9"
    },
    "conflict": {},
    "require-dev": {
        "ergebnis/composer-normalize": "^2.8",
        "friendsofphp/php-cs-fixer": "^2.16.4",
        "infection/infection": ">=0.10",
        "phan/phan": ">=1",
        "php-coveralls/php-coveralls": "^2.4.1",
        "phpstan/phpstan": ">=0.10",
        "phpunit/phpunit": "^9.4",
        "vimeo/psalm": ">=3.0.16"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": true
    },
    "autoload": {
        "psr-4": {
            "JSONSerializer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\JSONSerializer\\": "tests/"
        }
    }
}
