{
    "name": "sanmai/json-serializer",
    "description": "Flexible JSON Serializer",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Alexey Kopytko",
            "email": "alexey@kopytko.com",
            "homepage": "https://www.alexeykopytko.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": ">=8.2",
        "ext-json": "*",
        "jms/serializer": "^3.32.5"
    },
    "require-dev": {
        "doctrine/annotations": "^2.0.2",
        "ergebnis/composer-normalize": ">=2.8",
        "friendsofphp/php-cs-fixer": "^3.23.0",
        "infection/infection": ">=0.10",
        "phan/phan": ">=1",
        "php-coveralls/php-coveralls": "^2.4.1",
        "phpstan/phpstan": ">=0.10",
        "phpunit/phpunit": "^9.4 || ^10",
        "vimeo/psalm": ">=3.0.16"
    },
    "autoload": {
        "psr-4": {
            "JSONSerializer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\JSONSerializer\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": true,
        "sort-packages": true
    }
}
